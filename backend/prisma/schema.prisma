// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id            Int       @id @default(autoincrement())
  username      String    @unique
  hashPassword  String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  employees     Employee[]
  chatSessions  ChatSession[]
  
  @@map("users")
}

model Employee {
  id                Int       @id @default(autoincrement())
  fullName          String
  gender            String
  city              String
  position          String
  experience        Int
  age               Int
  positionType      String
  certification     Boolean
  training          Boolean
  lastVacation      DateTime?
  kpiMonths         Int?
  sickLeave         Boolean
  reprimands        Boolean
  corporateEvents   Boolean
  kpiValues         Json?     // Храним KPI значения как JSON
  llmRecommendation String?   // Рекомендация от LLM
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  
  userId            Int
  user              User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("employees")
}

model ChatSession {
  id          Int       @id @default(autoincrement())
  title       String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  userId      Int
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages    ChatMessage[]
  
  @@map("chat_sessions")
}

model ChatMessage {
  id              Int       @id @default(autoincrement())
  content         String
  isUser          Boolean   // true - от пользователя, false - от бота
  timestamp       DateTime  @default(now())
  
  sessionId       Int
  session         ChatSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  
  @@map("chat_messages")
}